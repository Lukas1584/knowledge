{
  // Общие
  "editor.formatOnSave": true,

  // CMake Tools
  "cmake.useCMakePresets": "always",
  "cmake.configureOnOpen": true,
  
  // clangd будет сам находить .clang-format и запускать clang-tidy
  "clangd.arguments": [
    "--clang-tidy",
    "--all-scopes-completion",
    "--header-insertion=never",
    "--cross-file-rename",
    "--compile-commands-dir=build"
  ],

  // для анализа кода даже если нет compile_commands.json
  "clangd.fallbackFlags": [
    "-std=c++20",
    "-I${workspaceFolder}/include",
    "-I/usr/include",                // системные заголовки
    "-I/usr/include/x86_64-linux-gnu", // часто для libcurl
    "-I/usr/include/curl",           // заголовки libcurl
    "-DPROJECT_USE_CURL=1"           // дефайн для условной компиляции
  ]

}
